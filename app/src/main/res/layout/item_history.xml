<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/historyKeywordTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/historyKeywordDeleteButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/historyKeywordDeleteButton"
       android:layout_marginTop="8dp"
        android:layout_width="20dp"
        android:src="@drawable/ic_baseline_clear_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginEnd="16dp"
        android:layout_height="20dp"/>

    <ImageButton
        android:id="@+id/bookMarkBtn"
        android:src="@drawable/ic_baseline_bookmark_border_24"
        android:layout_width="20dp"
        android:layout_marginTop="8dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/historyOrgUrlTextView"
        android:layout_marginEnd="16dp"

        />

    <TextView
        android:id="@+id/historyOrgUrlTextView"
        app:layout_constraintTop_toBottomOf="@id/historyKeywordTextView"
        android:layout_width="0dp"
        android:textColor="@color/gray_cc"
        android:layout_marginStart="16dp"
        android:maxLines="3"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bookMarkBtn"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/toolbarUnderLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_cc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>